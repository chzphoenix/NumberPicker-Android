<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <com.hcz.fastwidget.numberpicker.NumberPicker
        android:id="@+id/picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:numberpickerRows="7"
        app:numberpickerEditable="false"
        app:numberpickerDividerHeight="1dp"
        app:numberpickerDivider="@color/blue_bright_holo"
        android:textSize="24dp"
        android:textColor="#ff0000"
        />


</LinearLayout>
